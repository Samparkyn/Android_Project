<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samparkyn.zootycoon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.samparkyn.zootycoon.BuyAnimalDetails"
            android:label="Buy Animal Details"
            android:parentActivityName="com.samparkyn.zootycoon.MainActivity"></activity>
        
        <activity android:name="com.samparkyn.zootycoon.ViewZooDetails"
            android:label="View Zoo"
            android:parentActivityName="com.samparkyn.zootycoon.MainActivity"></activity>

        <activity android:name="com.samparkyn.zootycoon.ChooseEnclosureDetails"
            android:label="Choose Enclosure"
            android:parentActivityName="com.samparkyn.zootycoon.BuyAnimalDetails"></activity>
    </application>

</manifest>